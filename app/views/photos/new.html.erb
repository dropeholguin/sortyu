<div id="photo-form" class="row upper-space">
	<div class="callout small-12 medium-8 medium-push-2 text-center columns">
		<h4>Upload Image</h4>
		<%= render 'form', photo: @photo %>
		<div id="file-upload" class="callout row">
			<div class="small-12 text-center columns">
				<h5>Import from social media</h5>
			</div>
			<div class="small-12 medium-4 columns">
				<%= link_to "Facebook", import_facebook_path, class:"button facebook" %>
			</div>
			<div class="small-12 medium-4 columns">
				<%= link_to "Google", import_google_path, class:"button google" %>
			</div>
			<div class="small-12 medium-4 columns">
				<%= link_to "Instagram", import_instagram_path, class:"button instagram" %>
			</div>
		</div>
	</div>
</div>

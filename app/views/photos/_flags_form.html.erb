<div class="report-form">
	<%= form_tag flags_path do |f| %>
		<div class="field space">
			<%= label_tag "Reason:" %>
			<%= text_area_tag :reason, "" %>
			<%= hidden_field_tag :photo_id, photo_id %>
			<%= recaptcha_tags %>
		</div>
		<div class="actions text-center">
			<%= submit_tag "Send", class: "button" %>
		</div>
	<% end %>
</div>

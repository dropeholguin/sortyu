<% if @user.followers.count > 0 %>
	<% @user.followers.each do |follower| %>
		<div class="follow-container">
			<%= link_to profile_other_user_show_path(follower.id) do %>
				<%= avatar_profile_link follower, "medium", class:"circle" %>
				<h6>
					<%= follower.username %>
				</h6>
				<h6 class="name">
					<%= follower.first_name %>
				</h6>
			<% end %>
		</div>
	<% end %>
<% else %>
	<div class="small-12 text-center columns">
		<h4>No one is currently following <%= @user.full_name %></h4>
	</div>
<% end %>

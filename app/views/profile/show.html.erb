<div id="profile">
	<div class="row upper-space">
		<div class="small-4 medium-2 medium-text-center columns">
			<%= avatar_profile_link current_user, "medium", class: "circle" %>
		</div>
		<div id="user-name-container" class="truncate small-8 small-pull-1 medium-4 large-3 columns">
			<h6><%= current_user.full_name %></h6>
		</div>
		<div class="upper-space small-4 medium-6 medium-pull-1 end text-center columns">
			<div class="show-for-medium medium-6 columns">
				<%= link_to "Edit", edit_user_registration_path , class:"button small" %>
				<%= link_to "Upload", new_photo_path, class:"button small" %>
			</div>
		</div>
	</div>
	<div class="row upper-space">
		<div class="under-space small-12 medium-8 medium-push-2 columns">
			<p><b><%= current_user.username %> </b><%= current_user.about_you %></p>
		</div>
	</div>
	<div class="hide-for-medium small-12 text-center columns">
		<%= link_to "Edit", edit_user_registration_path , class:"button small" %>
		<%= link_to "Upload", new_photo_path, class:"button small" %>
	</div>
	<div class="row">
		<div class="small-12 columns">
			<ul class="tabs" data-tabs id="example-tabs">
			  	<li id="photos-count" data-photos-size="<%= @photos.count %>" class="tabs-title is-active">
			  		<a href="#panel1" aria-selected="true"><b><%= @photos.count() %></b> Images</a>
			  	</li>
			 	<li class="tabs-title">
			 		<a href="#panel2"><%= current_user.followers.count %> Followers</a>
			 	</li>
			 	<li class="tabs-title">
			 		<a href="#panel3"><%= current_user.following.count %> Following</a>
			 	</li>
			</ul>
			<div class="tabs-content" data-tabs-content="example-tabs">
				<div class="tabs-panel is-active" id="panel1">
					<%= render partial: 'gallery' %>
				</div>
				<div class="tabs-panel" id="panel2">
					<%= render partial: 'followers' %>
				</div>
				<div class="tabs-panel" id="panel3">
					<%= render partial: 'following' %>
				</div>
			</div>
		</div>
	</div>
</div>

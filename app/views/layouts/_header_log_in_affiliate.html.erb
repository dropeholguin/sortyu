<header class="row expanded">
    <div id="logo-container" class="small-4 columns">
        <strong><%= link_to "Sortyu", root_path %></strong>
    </div>
    <div class="small-8 columns">
        <ul class="dropdown menu float-right" data-dropdown-menu>
          <li>
            <a href="#" class="button">Menu</a>
            <ul class="menu">
                <li>
                    <%= link_to profile_affiliate_show_path(current_affiliate) do %>
                       <i class="fa fa-user" aria-hidden="true"></i>
                       <span>Profile</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to root_path do %>
                        <i class="fa fa-users" aria-hidden="true"></i>
                        <span>Sort</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to destroy_affiliate_session_path, method: :delete do %>
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        <span>Log Out</span>
                    <% end %>
                </li>
            </ul>
          </li>
        </ul>
        <%= link_to new_photo_path, class:"button float-right", id:"upload-button" do %>
            <span>Upload</span>
        <% end %>
    </div>
</header>
<header class="row expanded">
    <div id="logo-container" class="small-6 columns">
        <strong><%= link_to "Sortyu", root_path %></strong>
    </div>
    <div class="small-6 columns">
        <ul class="dropdown menu float-right" data-dropdown-menu>
            <li>
                <a href="#" class="button">Menu</a>
                <ul class="menu">
                    <li>
                        <%= link_to new_user_session_path do %>
                        	<i class="fa fa-sign-in" aria-hidden="true"></i>
                			<span>Log In</span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to new_user_registration_path do %>
                        	<i class="fa fa-user-plus" aria-hidden="true"></i>
                            <span>Register</span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to new_photo_path do %>
                            <i class="fa fa-picture-o" aria-hidden="true"></i>
                            <span>Upload Image</span>
                        <% end %>
                    </li>
                </ul>
            </li>
        </ul>

        <ul class="dropdown menu float-right" data-dropdown-menu>
          <li>
            <a href="#" class="button">Menu Affiliate</a>
            <ul class="menu">
                <li>
                    <%= link_to new_affiliate_session_path do %>
                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                        <span>Log In</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to new_affiliate_registration_path do %>
                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                        <span>Register</span>
                    <% end %>
                </li>
                <li>
                    <%= link_to new_photo_path do %>
                        <i class="fa fa-picture-o" aria-hidden="true"></i>
                        <span>Upload Image</span>
                    <% end %>
                </li>
            </ul>
          </li>
        </ul>
        <%= link_to new_photo_path, class:"button float-right", id:"upload-button" do %>
            <span>Upload</span>
        <% end %>
    </div>
</header>

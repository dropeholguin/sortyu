<div class="row">
	<div class="upper-space small-12 medium-6 medium-push-3 callout columns">
		<%= form_for @user, url: wizard_path, method: :put do |f| %>
		  <div class="upper-space field">
		    <%= f.label :email %>
		    <%= f.email_field :email, autofocus: true %>
			</div>
			<div class="row">
				<div class="small-12 text-center">
					<%= f.submit 'Next', class: "button" %>
				</div>
			</div>
		<% end %>
	</div>
</div>

